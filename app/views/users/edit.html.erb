
  <div class="container">
    <div class= "row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
        


         <h2>User info</h2>
          <%= form_with model: @user do |f| %>
          <label="inputName">Name</label><br>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
          <label="inputImage">Image</label><br>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> <br>
            <p>Introduction<p>
            <%= f.text_area :introduction%><br>
            
            <%= f.submit "Update User",class: "btn btn-secondary"%>
            <%=link_to
            <% end %>

      </div>
    </div>
  </div>
